<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/bottom_navigation">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                        <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                            android:id="@+id/splashLogo"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="10dp"
                            android:src="@drawable/splashlogo"
                            app:civ_border_color="#FF000000"
                            app:civ_border_width="2dp" />

                        <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                            android:id="@+id/categoryImage"
                            android:layout_width="180dp"
                            android:layout_height="180dp"
                            android:layout_below="@id/splashLogo"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="0dp"
                            android:src="@drawable/astronaut"
                            app:civ_border_color="@color/greenBtn"
                            app:civ_border_width="2dp" />

                        <TextView
                            android:id="@+id/name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/categoryImage"
                            android:layout_centerHorizontal="true"
                            android:layout_marginStart="20dp"
                            android:fontFamily="@font/bungee"
                            android:text="Name"
                            android:textSize="20dp" />
                        <androidx.cardview.widget.CardView
                            android:layout_below="@+id/name"
                            android:layout_marginTop="20dp"
                            android:layout_alignParentEnd="true"
                            android:id="@+id/card1"
                            android:layout_marginRight="20dp"
                            app:cardCornerRadius="20dp"
                            android:layout_width="200dp"
                            app:cardElevation="10dp"
                            android:layout_height="wrap_content">
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical">
                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginTop="10dp"
                                            android:fontFamily="@font/century_gothic"
                                            android:textSize="15sp"
                                            android:textColor="@color/black"
                                            android:textStyle="bold"
                                            android:layout_marginStart="20dp"
                                            android:text="BMI"/>

                                        <TextView
                                            android:id="@+id/height"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:fontFamily="@font/century_gothic"
                                            android:textSize="15sp"
                                            android:textColor="@color/black"
                                            android:textStyle="bold"
                                            android:layout_marginStart="20dp"
                                            android:text="Your height: "/>
                                        <TextView
                                            android:id="@+id/weights"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:fontFamily="@font/century_gothic"
                                            android:textSize="15sp"
                                            android:textColor="@color/black"
                                            android:textStyle="bold"
                                            android:layout_marginStart="20dp"
                                            android:text="Your Weight"/>
                                        <TextView
                                            android:id="@+id/bmi"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:fontFamily="@font/century_gothic"
                                            android:textSize="15sp"
                                            android:textColor="@color/black"
                                            android:textStyle="bold"
                                            android:layout_marginStart="20dp"
                                            android:text="Your Bmi: "/>
                                        <TextView
                                            android:id="@+id/category"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:fontFamily="@font/century_gothic"
                                            android:textSize="15sp"
                                            android:layout_marginTop="10dp"
                                            android:layout_gravity="center"
                                            android:layout_marginBottom="10dp"
                                            android:textColor="@color/black"
                                            android:textStyle="bold"
                                            android:text="BMI"/>
                                </LinearLayout>
                        </androidx.cardview.widget.CardView>
                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/filterBtn"
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/card1"
                            android:layout_marginLeft="10dp"
                            android:layout_marginBottom="20dp"
                            android:layout_marginTop="-100dp"
                            android:background="@drawable/round_button_beige"
                            android:drawableStart="@drawable/list"
                            android:fontFamily="@font/bungee"
                            android:onClick="showFilterTapped"
                            android:text="Filter"
                            android:textColor="@color/white" />

                        <RelativeLayout
                            android:id="@+id/filterTab"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/filterBtn"
                            android:layout_marginTop="80dp"
                            android:background="@color/black">

                                <LinearLayout
                                    android:id="@+id/mood"
                                    android:layout_width="270dp"
                                    android:layout_height="170dp"
                                    android:layout_marginStart="10dp"
                                    android:layout_marginTop="10dp"
                                    android:layout_marginEnd="10dp"
                                    android:layout_marginBottom="10dp"
                                    android:background="@drawable/filter_container"
                                    android:orientation="vertical">

                                        <TextView
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:fontFamily="@font/bungee"
                                            android:text="BMI"
                                            android:textAlignment="center"
                                            android:textColor="@color/black"
                                            android:textSize="18sp" />

                                        <RadioGroup
                                            android:id="@+id/bmi_radio_group"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:orientation="vertical">

                                                <RadioButton
                                                    android:id="@+id/underweight"
                                                    android:layout_width="120dp"
                                                    android:layout_height="30dp"
                                                    android:fontFamily="sans-serif-condensed-medium"
                                                    android:padding="5dp"
                                                    android:text="Underweight"
                                                    android:textSize="12sp" />

                                                <RadioButton
                                                    android:id="@+id/normal_weight"
                                                    android:layout_width="120dp"
                                                    android:layout_height="30dp"
                                                    android:fontFamily="sans-serif-condensed-medium"
                                                    android:padding="5dp"
                                                    android:text="Normal weight"
                                                    android:textSize="12sp" />

                                                <RadioButton
                                                    android:id="@+id/overweight"
                                                    android:layout_width="120dp"
                                                    android:layout_height="30dp"
                                                    android:fontFamily="sans-serif-condensed-medium"
                                                    android:padding="5dp"
                                                    android:text="Overweight"
                                                    android:textSize="12sp" />

                                                <RadioButton
                                                    android:id="@+id/obese"
                                                    android:layout_width="90dp"
                                                    android:layout_height="30dp"
                                                    android:fontFamily="sans-serif-condensed-medium"
                                                    android:padding="5dp"
                                                    android:text="Obesity"
                                                    android:textSize="12sp" />
                                        </RadioGroup>
                                </LinearLayout>


                                <LinearLayout
                                    android:id="@+id/healthCondition"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@id/mood"
                                    android:layout_marginStart="10dp"
                                    android:layout_marginTop="10dp"
                                    android:layout_marginEnd="10dp"
                                    android:layout_marginBottom="10dp"
                                    android:background="@drawable/filter_container"
                                    android:orientation="vertical">

                                        <TextView
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:fontFamily="@font/bungee"
                                            android:text="Health Condition"
                                            android:textAlignment="center"
                                            android:textColor="@color/black"
                                            android:textSize="18sp" />

                                        <LinearLayout
                                            android:layout_marginStart="5dp"
                                            android:layout_marginRight="5dp"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:orientation="horizontal">

                                                <CheckBox
                                                    android:id="@+id/diabetes"
                                                    android:layout_width="180dp"
                                                    android:layout_height="30dp"
                                                    android:button="@drawable/checkbox"
                                                    android:fontFamily="sans-serif-condensed-medium"
                                                    android:padding="5dp"
                                                    android:text="Diabetes"
                                                    android:textSize="12sp" />

                                                <CheckBox
                                                    android:id="@+id/cardio"
                                                    android:layout_width="180dp"
                                                    android:layout_height="30dp"
                                                    android:button="@drawable/checkbox"
                                                    android:fontFamily="sans-serif-condensed-medium"
                                                    android:padding="5dp"
                                                    android:text="Cardiovascular Diseases"
                                                    android:textSize="12sp" />
                                        </LinearLayout>

                                        <LinearLayout
                                            android:layout_marginStart="5dp"
                                            android:layout_marginRight="5dp"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:orientation="horizontal">

                                                <CheckBox
                                                    android:id="@+id/gastro"
                                                    android:layout_width="180dp"
                                                    android:layout_height="50dp"
                                                    android:button="@drawable/checkbox"
                                                    android:fontFamily="sans-serif-condensed-medium"
                                                    android:padding="5dp"
                                                    android:text="Gastroesophageal Reflux Disease"
                                                    android:textSize="12sp" />

                                                <CheckBox
                                                    android:id="@+id/osteo"
                                                    android:layout_width="180dp"
                                                    android:layout_height="30dp"
                                                    android:button="@drawable/checkbox"
                                                    android:fontFamily="sans-serif-condensed-medium"
                                                    android:padding="5dp"
                                                    android:text="Osteoporosis"
                                                    android:textSize="12sp" />
                                        </LinearLayout>

                                        <LinearLayout
                                            android:layout_marginStart="5dp"
                                            android:layout_marginRight="5dp"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:orientation="horizontal">

                                                <CheckBox
                                                    android:id="@+id/hypoallergenic"
                                                    android:layout_width="180dp"
                                                    android:layout_height="30dp"
                                                    android:button="@drawable/checkbox"
                                                    android:fontFamily="sans-serif-condensed-medium"
                                                    android:padding="5dp"
                                                    android:text="Hypoallergenic"
                                                    android:textSize="12sp" />

                                                <CheckBox
                                                    android:id="@+id/anemia"
                                                    android:layout_width="180dp"
                                                    android:layout_height="30dp"
                                                    android:button="@drawable/checkbox"
                                                    android:fontFamily="sans-serif-condensed-medium"
                                                    android:padding="5dp"
                                                    android:text="Anemia"
                                                    android:textSize="12sp" />
                                        </LinearLayout>

                                        <LinearLayout
                                            android:layout_marginStart="5dp"
                                            android:layout_marginRight="5dp"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:orientation="horizontal">

                                                <CheckBox
                                                    android:id="@+id/hypothyroidism"
                                                    android:layout_width="180dp"
                                                    android:layout_height="30dp"
                                                    android:button="@drawable/checkbox"
                                                    android:fontFamily="sans-serif-condensed-medium"
                                                    android:padding="5dp"
                                                    android:text="hypothyroidism"
                                                    android:textSize="12sp" />

                                                <CheckBox
                                                    android:id="@+id/Pregnant"
                                                    android:layout_width="180dp"
                                                    android:layout_height="30dp"
                                                    android:button="@drawable/checkbox"
                                                    android:fontFamily="sans-serif-condensed-medium"
                                                    android:padding="5dp"
                                                    android:text="Pregnant"
                                                    android:textSize="12sp" />
                                        </LinearLayout>



                                        <LinearLayout
                                            android:layout_marginStart="5dp"
                                            android:layout_marginRight="5dp"
                                            android:layout_width="match_parent"
                                            android:layout_marginBottom="10dp"
                                            android:layout_height="wrap_content"
                                            android:orientation="horizontal">

                                                <CheckBox
                                                    android:id="@+id/hyper"
                                                    android:layout_width="180dp"
                                                    android:layout_height="30dp"
                                                    android:button="@drawable/checkbox"
                                                    android:fontFamily="sans-serif-condensed-medium"
                                                    android:padding="5dp"
                                                    android:text="Hyperthyroidism"
                                                    android:textSize="12sp" />

                                                <CheckBox
                                                    android:id="@+id/Arthritis"
                                                    android:layout_width="180dp"
                                                    android:layout_height="30dp"
                                                    android:button="@drawable/checkbox"
                                                    android:fontFamily="sans-serif-condensed-medium"
                                                    android:padding="5dp"
                                                    android:text="Arthritis"
                                                    android:textSize="12sp" />
                                        </LinearLayout>
                                </LinearLayout>
                        </RelativeLayout>

                        <Button
                            android:id="@+id/recommendBtn"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/filterTab"
                            android:layout_marginStart="10dp"
                            android:layout_marginTop="50dp"
                            android:layout_marginEnd="10dp"
                            android:layout_marginBottom="10dp"
                            android:background="@drawable/round_button"
                            android:fontFamily="@font/bungee"
                            android:text="Recommend"
                            android:textSize="18sp" />


                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/recyclerView2"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_below="@id/recommendBtn"
                            android:layout_marginTop="20dp"
                            android:layout_marginBottom="20dp"
                            android:clickable="false"
                            android:scrollbars="vertical" />


                </RelativeLayout>
        </androidx.core.widget.NestedScrollView>
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fabs23"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/bottom_navigation"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="30dp"
            android:layout_marginBottom="16dp"
            android:src="@drawable/ic_baseline_refresh_24"
            app:backgroundTint="#D6CFD2" />
        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/bottom_navigation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@drawable/home_nav"
            app:elevation="10dp"
            app:itemIconTint="@android:color/black"
            app:itemTextColor="@android:color/black"
            app:labelVisibilityMode="labeled"
            app:menu="@menu/bottom_menu2" />
</RelativeLayout>
