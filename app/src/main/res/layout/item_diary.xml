<?xml version="1.0" encoding="utf-8"?>
<!-- Define the layout for each diary entry -->
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <!-- Add TextViews or ImageViews to display the diary entry information -->
    <ImageView
        android:id="@+id/entryImage"
        android:layout_width="match_parent"
        android:layout_height="200dp" />

    <TextView
        android:id="@+id/entryName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp" />

    <!-- Add more TextViews or ImageViews for other entry details -->

</LinearLayout>
