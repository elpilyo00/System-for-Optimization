<!-- res/drawable/button_highlight.xml -->
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="oval">
            <solid android:color="#7DD691" /> <!-- Highlight color when pressed -->
            <size android:width="20dp" android:height="20dp" /> <!-- Adjust size as needed -->
        </shape>
    </item>
    <item>
        <shape android:shape="oval">
            <solid android:color="@android:color/transparent" /> <!-- Default background color -->
            <size android:width="20dp" android:height="20dp" /> <!-- Adjust size as needed -->
        </shape>
    </item>
</selector>
