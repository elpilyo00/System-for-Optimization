<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <include layout="@layout/dialog_header"/>
    <RelativeLayout
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
            <RelativeLayout
                android:id="@+id/l1"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="60dp">
            <CheckBox
                android:id="@+id/checkbox_breakfast"
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:textSize="20dp"
                android:text="Breakfast"/>
                <ImageView
                    android:layout_width="100dp"
                    android:layout_alignParentEnd="true"
                    android:layout_marginRight="5dp"
                    android:layout_height="100dp"
                    android:src="@mipmap/breakfast"/>
           </RelativeLayout>
        <View
            android:id="@+id/view1"
            android:layout_width="match_parent"
            android:background="@color/black"
            android:layout_below="@+id/l1"
            android:layout_height="2dp"/>
            <RelativeLayout
                android:id="@+id/l2"
                android:layout_marginTop="5dp"
                android:layout_below="@+id/view1"
                android:layout_marginBottom="5dp"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="60dp">
            <CheckBox
                android:id="@+id/checkbox_lunch"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:text="Lunch"/>
                <ImageView
                    android:layout_width="100dp"
                    android:layout_alignParentEnd="true"
                    android:layout_marginRight="5dp"
                    android:layout_height="100dp"
                    android:src="@mipmap/lunch"/>
            </RelativeLayout>
        <View
            android:id="@+id/view2"
            android:layout_width="match_parent"
            android:background="@color/black"
            android:layout_below="@+id/l2"
            android:layout_height="2dp"/>
        <RelativeLayout
            android:id="@+id/l3"
            android:layout_below="@+id/view2"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="60dp">
            <CheckBox
                android:id="@+id/checkbox_dinner"
                android:textSize="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Dinner"/>
            <ImageView
                android:layout_width="100dp"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="5dp"
                android:layout_height="100dp"
                android:src="@mipmap/dinner"/>
        </RelativeLayout>
    </RelativeLayout>
    <include layout="@layout/dialog_footer"/>
</LinearLayout>
